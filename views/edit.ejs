<% include ./partials/header %>

<div class="ui main text container segment">
  <div class="ui huge header">Edit <%= blog.title %></div>
  <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
    <!--becasue of qs module from extended boolean parametr passed in body-parser-->
    <!--we can create object on req.body.blog by passing into brackets expression-->
    <div class="field">
      <label>Title</label>
      <input type="text" name="blog[title]" placeholder="title" value="<%= blog.title %>">
    </div>
    <div class="field">
      <label>Image</label>
      <input type="text" name="blog[image]" placeholder="image" value="<%= blog.image %>">
    </div>
    <div class="field">
      <label>Blog Content</label>
      <textarea name="blog[body]" placeholder="blog post goes here"><%= blog.body %></textarea>
    </div>
    <input class="ui violet basic button" type="submit">
  </form>
</div>

<% include ./partials/footer %>
